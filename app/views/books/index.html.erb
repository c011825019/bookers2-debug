<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'layouts/errors', obj: @book %>
    <%= form_with model: @q, url: books_path, method: :get, local: true do |f| %>
      <%= f.collection_check_boxes(:categorys_id_eq_any, Category.all, :id, :name) do |category| %>
        <%= category.label do %>
          <%= category.check_box %>
          <%= category.text %>
        <% end %>
      <% end %>
      <%= f.submit "検索" %>
    <% end %>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <p>
        <%= sort_link(@q, :created_at, "投稿日") %>|
        <%= sort_link(@q, :rate, "評価") %>
      </p>
      <%= render 'index', books: @books%>
    </div>
  </div>
</div>