<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><%= render 'favorites/favorites', book: @book %></td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
        </tr>
      </table>
      <div>
        <table class="table table-borderless">
          <% @book.post_comments.each do |post_comment| %>
            <tr>
              <td>
                <%= link_to(post_comment.user) do %>
                  <%= image_tag post_comment.user.get_profile_image, size:"50x50" %><br>
                  <%= post_comment.user.name %>
                <% end %>
              </td>
              <td class="text-left">
                <%= post_comment.comment %>
              </td>
              <td>
                <%= link_to 'Destroy', book_post_comments_path(@book), method: :delete, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </table>

      </div>
      <div>
        <%= form_with model: [@book, @post_comment] do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, row: '5', class:'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit "送信" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>